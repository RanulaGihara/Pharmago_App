<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sweet_dialog_bg_color"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/progress_bar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="1dp"
            android:orientation="vertical"></LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Sync Progress"
                android:textColor="@color/material_list_sub_black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Task is processing...."
                android:textColor="@color/black"
                android:textStyle="bold" />


        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!--<ImageView-->
            <!--android:id="@+id/image_view"-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_margin="1dp"-->
            <!--android:src="@drawable/checked_mark"-->
            <!--android:visibility="invisible" />-->
    </LinearLayout>


</LinearLayout>
