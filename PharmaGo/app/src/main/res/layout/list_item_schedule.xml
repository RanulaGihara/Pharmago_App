<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_text"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/ic_outlets_white_24dp" />

    <LinearLayout
        android:id="@+id/containerBox"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_cus_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Last Visit"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_last_visit"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Credit Limit" />

            <TextView
                android:id="@+id/text_credit_limit"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="0.00"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Total Outstanding" />

            <TextView
                android:id="@+id/text_total_outstanding"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="0.00"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/imageLocation"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/ic_baseline_location_on_40" />



    <TextView
        android:id="@+id/textExpandInd"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="+"
        android:textSize="40sp" />


</LinearLayout>
