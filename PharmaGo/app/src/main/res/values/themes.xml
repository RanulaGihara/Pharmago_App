<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CWmackie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary0</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary0</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CWmackie.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CWmackie.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CWmackie.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="GreenAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#01a101</item>
    </style>


    <style name="customRatingBar_day" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/not_visited</item>

    </style>

    <style name="customRatingBar_mtd" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/unproductive</item>

    </style>

    <style name="redButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button_red</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/error_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/white</item>
        <item name="useCompatPadding">true</item>
    </style>

</resources>